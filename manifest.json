{
  "manifest_version": 3,
  "name": "CCH",
  "version": "1.0",

  "description": "Handles client side consent handshake",

  "homepage_url": "https://github.com/TiagoPR/cch",
  
  "permissions": ["scripting", "activeTab", "http://127.0.0.1/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["consent.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "48": "icons/handshake_48.png"
  }
}
